# Environment Configuration Template
# Copy this file to .env and update values

# Server Configuration
JWT_SECRET=change-this-to-a-secure-random-256-bit-key
LOG_LEVEL=info
MAX_SESSIONS=100
SERVER_PORT=8080

# Database
DB_PATH=/app/data/devices.db

# Logging
AUDIT_LOG_PATH=/app/logs/audit.log

# Security
ENABLE_TLS=true
TLS_CERT_PATH=/app/ssl/cert.pem
TLS_KEY_PATH=/app/ssl/key.pem

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Web Controller
VITE_DEFAULT_SERVER_URL=ws://localhost:8080
NODE_ENV=development

# Docker
COMPOSE_PROJECT_NAME=arcs
